@model EXAMENMVC.Models.Vehiculo

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1>Eliminar Vehiculo</h1>
    <h3>Seguro de eliminar el Vehiculo?</h3>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Detalles del vehiculo</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NRO_PLACA)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NRO_PLACA)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.año)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.año)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.estado)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.estado)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Color)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Color)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Modelo.Marca.NOM_MARCA)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Modelo.Marca.NOM_MARCA)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Modelo.NOM_MODELO)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Modelo.NOM_MODELO)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="IDVEHICULO" />
                <div class="form-group">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Volver atras</a>
                </div>
            </form>
        </div>
    </div>
</div>